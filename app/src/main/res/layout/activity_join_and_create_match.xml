<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradiant_background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join / Create"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/join_create_title"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:id="@+id/join_create_room_title"
        android:text="Rooms:"
        android:layout_below="@id/join_create_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        >


    </TextView>

    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match UwU"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_below="@id/join_create_room_title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/join_create_chip"
        android:visibility="visible"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_dark"
        android:shadowColor="@color/white"
        android:layout_below="@+id/join_create_chip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="   JOIN   "
        android:textColor="@color/white"
        android:textSize="35sp"
        android:id="@+id/join_create_btn_join"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_dark"
        android:shadowColor="@color/white"
        android:layout_below="@id/join_create_room_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100sp"
        android:layout_marginTop="10dp"
        android:text="     Create     \n     Match    "
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/join_create_btn_create"

        ></Button>



</RelativeLayout>